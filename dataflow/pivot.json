{
	"name": "pivot",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "empdata",
						"type": "DatasetReference"
					},
					"name": "empdata"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "outputdataset1",
						"type": "DatasetReference"
					},
					"name": "outputofpivot",
					"rejectedDataLinkedService": {
						"referenceName": "linkedservise_arifa",
						"type": "LinkedServiceReference"
					}
				}
			],
			"transformations": [
				{
					"name": "pivotofempdata"
				}
			],
			"scriptLines": [
				"source(output(",
				"          eid as string,",
				"          name as string,",
				"          gender as string,",
				"          deptid as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     partitionBy('hash', 1)) ~> empdata",
				"empdata pivot(groupBy(deptid),",
				"     pivotBy(gender),",
				"     {} = count(eid),",
				"     columnNaming: 'total$N$Vemplloyees',",
				"     lateral: true,",
				"     partitionBy('hash', 1)) ~> pivotofempdata",
				"pivotofempdata sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          Name as string,",
				"          Category as string,",
				"          Status as string,",
				"          Error as string",
				"     ),",
				"     partitionFileNames:['pivot.csv'],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     partitionBy('hash', 1)) ~> outputofpivot"
			]
		}
	}
}